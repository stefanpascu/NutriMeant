<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".Activity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="LET'S START"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="SELECT YOUR GOAL"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="3">

        <!-- Students -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_students"
            style="@style/ClassMenuCard"
            android:backgroundTint="@color/red">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/fat" />

                <TextView
                    style="@style/ClassMenuCardTV"
                    android:text="Students" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Courses -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_courses"
            style="@style/ClassMenuCard"
            android:backgroundTint="@color/black">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/fat" />

                <TextView
                    style="@style/ClassMenuCardTV"
                    android:text="Courses" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Schedule -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_schedule"
            style="@style/ClassMenuCard"
            android:backgroundTint="@color/black">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/fat" />

                <TextView
                    style="@style/ClassMenuCardTV"
                    android:text="Schedule" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Events -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_events"
            style="@style/ClassMenuCard"
            android:backgroundTint="@color/red">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/fat" />

                <TextView
                    style="@style/ClassMenuCardTV"
                    android:text="Events" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>

</RelativeLayout>