<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowRezultate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/showrezultate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/showrezultatepoza" />

        <ProgressBar
            android:id="@+id/textView"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="320dp"
            android:layout_height="489dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:progress="40"
            android:progressDrawable="@drawable/circle"
            android:text="TextView" />

        <ImageView
            android:id="@+id/cerkcal"
            android:layout_width="256dp"
            android:layout_height="349dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/cerkcal" />

        <ImageButton
            android:id="@+id/butoncarbs"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/carbs" />

        <ImageButton
            android:id="@+id/butonprotein"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/protein" />

        <ImageButton
            android:id="@+id/butonfat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fat" />

        <ImageButton
            android:id="@+id/butonkcal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kcal" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>